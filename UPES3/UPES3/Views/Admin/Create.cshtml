@model UPES3.Data.Access.account
@{
    Layout = null;
}
<div class="modal-dialog" style="width:1000px;">
    <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">Thêm Tài Khoản</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body" style=" width:600px;height:400px;align-items:flex-start;">
            @using (Html.BeginForm("create", "admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal" style="color:black">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="username" class="text-info">Tên Đăng Nhập</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.userName, new { @class = "form-control", @required = "Enter Username", @placeholder = "Nhập Tài Khoản" })
                            @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="text-info">Mật Khẩu</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.passWord, new { htmlAttributes = new { @class = "form-control", @required = "Enter Password", @placeholder = "Nhập Mật Khẩu" } })
                            @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="username" class="text-info">Mật Khẩu</label>
                        <div class="col-md-10">
                            <input id="confirm" type="password" required placeholder="Nhập Lại Mật Khẩu" oninput="check(this)" />
                            <span class="field-validation-valid text-danger" data-valmsg-for="passWord" data-valmsg-replace="true" id="confirm-msg"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username" class="text-info">Quyền Truy Cập</label>
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.role, null, "Phân Quyền", new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Thêm Mới" class="btn-danger" />
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
<script language="JavaScript" type="text/javascript">
    $(document).ready(function () {
        $('.close').click(function () {
            $("#myModal").modal('hide');
        })
    });
    function check(input) {
        if (input.value != document.getElementById('passWord').value) {
            $('#confirm-msg').html('Chưa khớp');
        }
        else $('#confirm-msg').html('');
    }
</script>
